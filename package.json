{
  "name": "with-typescript-eslint-jest",
  "author": "@tak-onda",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "next-export": "next export",
    "export": "run-s build next-export",
    "start": "next start -H 0.0.0.0",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "run-s lint type-check test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@tailwindui/react": "^0.1.1",
    "next": "latest",
    "preact": "^10.5.2",
    "preact-render-to-string": "^5.1.10",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1"
  },
  "devDependencies": {
    "@prefresh/next": "^1.2.1",
    "@testing-library/preact": "^2.0.0",
    "@testing-library/preact-hooks": "^1.0.6",
    "@testing-library/react": "npm:@testing-library/preact@^2.0.0",
    "@testing-library/react-hooks": "npm:@testing-library/preact-hooks@^1.0.6",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.2.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "tailwindcss": "^1.8.10",
    "typescript": "^3.8.3"
  }
}
